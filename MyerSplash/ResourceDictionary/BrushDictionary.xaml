<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:backdrop="using:MyerSplash.Common.Brush">
    <backdrop:AcrylicBrush
        x:Key="AppBackgroundBrush"
        BackdropFactor="0.5"
        BlurAmount="10"
        TintColor="Black"
        TintColorFactor="1.0" />
    <backdrop:AcrylicBrush
        x:Key="AppBackgroundBrushDark"
        BackdropFactor="0.2"
        BlurAmount="10"
        TintColor="Black"
        TintColorFactor="3.0" />
    <backdrop:AcrylicBrush
        x:Key="AppBackgroundBrushLittleDark"
        BackdropFactor="0.5"
        BlurAmount="10"
        TintColor="Black"
        TintColorFactor="10" />
    <backdrop:AcrylicHostBrush
        x:Key="AppHostBackgroundBrush"
        BlurAmount="2"
        TintColor="#1B1B1B" />
</ResourceDictionary>
